@model Banner
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="BannerId" />
    <div class="form-group">
        <label>Arka Plan Görsel Url</label>
        <input type="text" class="form-control" asp-for="CoverImageUrl" />
        <span class="text-danger" asp-validation-for="CoverImageUrl"></span>
    </div>
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" class="form-control" asp-for="NameSurname" />
        <span class="text-danger" asp-validation-for="NameSurname"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea class="form-control" asp-for="Title" rows="3"> </textarea>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <button class="btn btn-outline-primary" type="submit">Güncelle</button>
</form>