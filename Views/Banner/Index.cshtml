@model List<Banner>
@{
    ViewData["Title"] = "Öne Çıkan Alan";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Arka Plan Resmi</td>
        <td>Ad Soyad</td>
        <td>Başlık</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.CoverImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>
                <button onclick="deleteBanner(@item.BannerId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Banner/CreateBanner/" class="btn btn-outline-primary">Yeni Alan Oluştur</a>

<script>
                function deleteBanner(id){

                        Swal.fire({
      title: "Silmek İstediğinize Emin Misiniz?",
      text: "Bu İşlemi Geri Alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet Sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {
       window.location.href = "/Banner/DeleteBanner/" + id;
      }
    });
                }
</script>