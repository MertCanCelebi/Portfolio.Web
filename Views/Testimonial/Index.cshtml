@model List<Testimonial>
@{
    ViewData["Title"] = "Referanslarım";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Resim</td>
        <td>İsim</td>
        <td>Başlık</td>
        <td>Yorum</td>
        <td>Değerlendirme</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td>@item.Review</td>
            <td>
                <button onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Ekle</a>


<script>
                function deleteTestimonial(id){

                        Swal.fire({
      title: "Silmek İstediğinize Emin Misiniz?",
      text: "Bu İşlemi Geri Alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet Sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {
       window.location.href = "/Testimonial/DeleteTestimonial/" + id;
      }
    });
                }
</script>