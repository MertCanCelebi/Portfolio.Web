@model List<Experience>
@{
    ViewData["Title"] = "Deneyimlerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Şirket Adı</td>
        <td>Başlangıç Yılı</td>
        <td>Bitiş Yılı</td>
        <td>Başlık</td>
        <td>Şehir</td>
        <td>Açıklama</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Company</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td>@item.Title</td>
            <td>@item.City</td>
            <td>@item.Description</td>
            <td>
                <button onclick="deleteExperience(@item.ExperienceId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Experience/CreateExperience/" class="btn btn-outline-primary">Yeni Deneyim Bilgisi Ekle</a>


<script>
                function deleteExperience(id){

                        Swal.fire({
      title: "Silmek İstediğinize Emin Misiniz?",
      text: "Bu İşlemi Geri Alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet Sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {
       window.location.href = "/Experience/DeleteExperience/" + id;
      }
    });
                }
</script>