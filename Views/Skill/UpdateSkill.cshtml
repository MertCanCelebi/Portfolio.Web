@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="SkillId" />
    <div class="form-group">
        <label>Yetenek Adı</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>Yetenek Yüzdesi</label>
        <input type="number" class="form-control" asp-for="Percentage" min="0" max="100" />
        <span class="text-danger" asp-validation-for="Percentage"></span>
    </div>
    <button class="btn btn-outline-primary">Güncelle</button>
</form>