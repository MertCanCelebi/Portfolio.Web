@model Skill
@{
    ViewData["Title"] = "Yeni Yetenek Oluştur";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <div class="form-group mb-3">
        <label>Yetenek Adı</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group mb-3">
        <label>Yetenek Yüzdesi</label>
        <input type="number" class="form-control" asp-for="Percentage" min="0" max="100" />
        <span class="text-danger" asp-validation-for="Percentage"></span>
    </div>

    <button class="btn btn-outline-primary">Kaydet</button>
</form>
