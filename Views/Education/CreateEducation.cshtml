@model Education

@{
    ViewData["Title"] = "Yeni Eğitim Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label>Okul Adı</label>
        <input type="text" class="form-control" asp-for="SchoolName" />
        <span class="text-danger" asp-validation-for="SchoolName"></span>
    </div>
    <div class="form-group">
        <label>Başlangıç Yılı</label>
        <input type="number" class="form-control" asp-for="StartYear" />
        <span class="text-danger" asp-validation-for="StartYear"></span>
    </div>
    <div class="form-group">
        <label>Bitiş Yılı</label>
        <input type="text" class="form-control" asp-for="EndYear" />
        <span class="text-danger" asp-validation-for="EndYear"></span>
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <input type="text" class="form-control" asp-for="Department" />
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea class="form-control" asp-for="Description" rows="3"> </textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>


    <button class="btn btn-outline-primary" type="submit">Kaydet</button>
</form>

