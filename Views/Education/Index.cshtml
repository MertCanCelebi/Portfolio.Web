@model List<Education>
@{
    ViewData["Title"] = "Eğitim Bilgileri";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Okul Adı</td>
        <td>Başlangıç Yılı</td>
        <td>Bitiş Yılı</td>
        <td>Bölüm</td>
        <td>Açıklama</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.SchoolName</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td>@item.Department</td>
            <td>@item.Description</td>
            <td>
                <button onclick="deleteEducation(@item.EducationId)" class="btn btn-outline-danger">Sil</button>
                <a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-outline-primary">Yeni Eğitim Bilgisi Ekle</a>


<script>
                function deleteEducation(id){

                        Swal.fire({
      title: "Silmek İstediğinize Emin Misiniz?",
      text: "Bu İşlemi Geri Alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet Sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {
       window.location.href = "/Education/DeleteEducation/" + id;
      }
    });
                }
</script>