@model ContactInfo
@{
    ViewData["Title"] = "İletişim Bilgileri Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ContactInfoId"/>
    <div class="form-group">
        <label>Adres</label>
        <input type="text" class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label>E-Mail</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label>Harita Url</label>
        <input type="text" class="form-control" asp-for="MapUrl" />
        <span class="text-danger" asp-validation-for="MapUrl"></span>
    </div>



    <button class="btn btn-outline-primary" type="submit">Kaydet</button>
</form>