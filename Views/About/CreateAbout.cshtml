@model About
@{
    ViewData["Title"] = "Hakkımda Ekleme Sayfası";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label>Proje Görsel Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea class="form-control" asp-for="Description" rows="3"> </textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label>Doğum Tarihi</label>
        <input type="date" class="form-control" asp-for="BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label>Web Sitesi</label>
        <input type="text" class="form-control" asp-for="WebSite" />
        <span class="text-danger" asp-validation-for="WebSite"></span>
    </div>
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label>Şehir</label>
        <input type="text" class="form-control" asp-for="City" />
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label>Mezuniyet</label>
        <input type="text" class="form-control" asp-for="Graduation" />
        <span class="text-danger" asp-validation-for="Graduation"></span>
    </div>
    <div class="form-group">
        <label>E-Mail</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label>Freelance Çalışmaya Uygunluk</label>
        <div>
            <input type="radio" asp-for="IsAvailable" value="true" /> Uygun
            <input type="radio" asp-for="IsAvailable" value="false" /> Uygun Değil
        </div>
        <span class="text-danger" asp-validation-for="IsAvailable"></span>
    </div>
   

    <button class="btn btn-outline-primary" type="submit">Kaydet</button>
</form>
