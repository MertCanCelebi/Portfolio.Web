@model List<About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
    var available = "Uygun";
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <td>Resim</td>
        <td>Başlık</td>
        <td>Açıklama</td>
        <td>Doğum Tarihi</td>
        <td>Web Site</td>
        <td>Telefon Numarası</td>
        <td>Şehir</td>
        <td>Mezuniyet</td>
        <td>E-mail</td>
        <td>Freelance Çalışmaya Uygunluk</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.BirthDate.ToString("dd.MM.yyyy")</td>
            <td>@item.WebSite</td>
            <td>@item.PhoneNumber</td>
            <td>@item.City</td>
            <td>@item.Graduation</td>
            <td>@item.Email</td>
            @{
                if (@item.IsAvailable is true)
                {
                    available = "Uygun";
                }
                else
                {
                    available = "Uygun Değil";
                }
            }
            <td>@available</td>
            <td>
                <button onclick="deleteAbout(@item.AboutId)" class="btn btn-outline-danger">Sil</button>
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakımda Alanı Ekle</a>


<script>
                function deleteAbout(id){

                        Swal.fire({
      title: "Silmek İstediğinize Emin Misiniz?",
      text: "Bu İşlemi Geri Alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet Sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {
       window.location.href = "/About/DeleteAbout/" + id;
      }
    });
                }
</script>


